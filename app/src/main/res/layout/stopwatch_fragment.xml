<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/start_space"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"/>

    <Space
        android:id="@+id/end_space"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.ostap_kozak.progress.views.TimerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="00:00:00"
            android:textSize="60sp"
            android:id="@+id/stopwatch_time_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/stop_button"
                    android:onClick="stop_buttonClick"
                    android:src="@drawable/ic_stop_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:elevation="0dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:onClick="play_pauseClick"
                    android:id="@+id/play_pause_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:src="@drawable/ic_pause_button"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>